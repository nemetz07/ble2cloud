<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:layout_marginTop="8dp"
    android:background="#686868"
    android:orientation="vertical">

    <TextView
        android:id="@+id/characteristicCellNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CHARACTERISTIC_NAME"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/characteristicCellUUIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/characteristicCellNameTV"
        app:layout_constraintTop_toBottomOf="@+id/characteristicCellNameTV" />

    <Switch
        android:id="@+id/characteristicCellEnableSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:trackTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true" />

    <TextView
        android:id="@+id/characteristicCellUnitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="[UNIT]"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/characteristicCellNameTV"
        app:layout_constraintStart_toEndOf="@+id/characteristicCellNameTV"
        app:layout_constraintTop_toTopOf="@+id/characteristicCellNameTV" />

</androidx.constraintlayout.widget.ConstraintLayout>